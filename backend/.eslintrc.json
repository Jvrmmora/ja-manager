{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": "off",
    "linebreak-style": ["error", "unix"],
    "quotes": "off",
    "semi": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "no-undef": "off",
    "no-useless-escape": "warn",
    "no-prototype-builtins": "warn",
    "no-self-assign": "warn"
  },
  "ignorePatterns": [
    "dist/**/*",
    "node_modules/**/*",
    "tests/**/*",
    "uploads/**/*"
  ]
}
